<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SummaryScreen">

    <LinearLayout
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backbutton" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!-- Row 1: Happy | Sad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/happytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/happy" />

                <ListView
                    android:id="@+id/happylist"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/sadtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sad" />

                <ListView
                    android:id="@+id/sadlist"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>

            <!-- Row 2: Grateful | Angry -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/gratefultext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grateful" />

                <ListView
                    android:id="@+id/gratefullist"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/angrytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/angry" />

                <ListView
                    android:id="@+id/angrylist"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>

            <!-- Row 3: Excited | Disappointed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/excitedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/excited" />

                <ListView
                    android:id="@+id/excitedlist"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/disappointedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disappointed" />

                <ListView
                    android:id="@+id/disappointedlist"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</ScrollView>
